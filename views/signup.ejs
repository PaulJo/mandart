<%- include('partials/header') %>
<body class="auth-body">
  <div class="auth-container">
    <h1>Sign up</h1>
    <h2>Welcome to Manda La Art!</h2>
    <form class="auth-form" action="/auth/signup" method="POST">
      <input
        type="email"
        name="username"
        placeholder="Email"
        autocomplete="none"
      />
      <div class="password-container">
        <input
          id="password1"
          type="password"
          name="password"
          placeholder="Password"
          required
        />
        <span class="confirm-circle"></span>
      </div>

      <div class="password-container">
        <input
          id="password2"
          type="password"
          name="password"
          placeholder="Confirm Password"
          required
        />
        <span class="confirm-circle"></span>
      </div>

      <input type="submit" class="signup-btn" value="Sign in" />
    </form>
  </div>
</body>
<script src="/scripts/auth.js"></script>
<%- include('partials/footer') %>
